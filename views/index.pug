doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/static/bootstrap.min.css")
    title= site_name
  body
    div(class="container")
      div.row
        div.col
          h1= site_name
          form(method='POST' action="/generate")
            div.form-group
              label(for='num') How many lessons to include:
              input#num.form-control(type='number' min=min_tracks max=num_tracks value=min_tracks name='num')
              small(class="form-text text-muted") Select a number between #{min_tracks} and #{num_tracks}
            div.form-group
              button(type=submit) Submit